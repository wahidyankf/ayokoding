{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "rootDir": ".",
    "outDir": "./dist",
    "declaration": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["jest", "@testing-library/jest-dom", "node"]
  },
  "include": ["src/**/*", "scripts/**/*.mts", "scripts/**/*.ts"],
  "exclude": [
    "node_modules", 
    "**/*.spec.ts", 
    "**/*.test.ts", 
    "next.config.js", 
    "jest.config.js", 
    "tailwind.config.js"
  ]
}
