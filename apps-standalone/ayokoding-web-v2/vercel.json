{
  "version": 2,
  "builds": [
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public",
        "framework": "hugo"
      }
    }
  ],
  "routes": [{ "src": "/(.*)", "dest": "/index.html" }],
  "env": {
    "HUGO_VERSION": "0.134.3",
    "PATH": "$HOME/bin:$PATH"
  }
}
