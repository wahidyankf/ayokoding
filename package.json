{
  "name": "ayokoding",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prepare": "echo 'Skipping Husky install'",
    "next-hello:build": "nx build next-hello",
    "next-hello:dev": "nx serve next-hello",
    "next-hello:test": "nx test next-hello",
    "next-hello:typecheck": "nx typecheck next-hello",
    "ayokoding-web:build": "cd apps-standalone/ayokoding-web && npm run build",
    "ayokoding-web:dev": "cd apps-standalone/ayokoding-web && npm run dev",
    "ayokoding-web:start": "cd apps-standalone/ayokoding-web && npm run start",
    "ayokoding-web:lint": "cd apps-standalone/ayokoding-web && npm run lint",
    "ayokoding-web:typecheck": "cd apps-standalone/ayokoding-web && npm run typecheck",
    "ayokoding-web:test": "cd apps-standalone/ayokoding-web && npm run test",
    "ayokoding-web:test:all": "npm run ayokoding-web:typecheck && npm run ayokoding-web:test && npm run ayokoding-web:lint && npm run ayokoding-web:build",
    "test:echo": "echo 'Running tests for Ayokoding monorepo'",
    "typecheck": "npx nx run-many --target=typecheck",
    "test:all:standalone": "npm run ayokoding-web:test:all",
    "test:all": "npm run test:echo && npm run test:all:standalone && npx nx run-many --target=test && npx nx run-many --target=typecheck && npx nx run-many --target=build",
    "build": "./scripts/build.sh"
  },
  "devDependencies": {
    "@babel/core": "^7.26.8",
    "@babel/plugin-transform-modules-commonjs": "^7.26.3",
    "@babel/plugin-transform-runtime": "^7.26.8",
    "@babel/preset-env": "^7.26.8",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@nx/eslint": "^20.4.2",
    "@nx/jest": "^20.4.2",
    "@nx/js": "^20.4.2",
    "@nx/next": "^20.4.2",
    "@nx/react": "^20.4.2",
    "@tailwindcss/postcss": "^4.0.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "autoprefixer": "^10.4.20",
    "babel-jest": "^29.7.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.4.3",
    "nx": "^20.4.2",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.0.5",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.2"
  },
  "dependencies": {
    "@nx/web": "^20.4.2",
    "next": "^15.1.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,json,html}": [
      "prettier --write"
    ]
  },
  "volta": {
    "node": "20.11.0",
    "npm": "11.1.0"
  }
}
